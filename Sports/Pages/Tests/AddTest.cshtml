@page
@model Sports.Pages.Tests.AddTestModel
@{
    ViewData["Title"] = "AddTest";
}
<html>
<body>
    <form method="post">
        <div class="container">
            <div class="text-center">
                <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">CREATE NEW TEST</button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">CREATE NEW TEST</h4>
                        </div>

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="testType">Type</label>
                                <select class="form-control" asp-for="Test.testType" required>
                                    <option value="Cooper test">Cooper test</option>
                                    <option value="100 Meter sprint">100 Meter sprint</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Test.testType"></span>
                            </div>
                            <div class="form-group">
                                <label for="testDate" class="d-flex justify-content-center">Date</label>
                                <input type="date" class="form-control" asp-for="Test.testDate" required />
                                <span class="text-danger" asp-validation-for="Test.testDate"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="Submit" class="btn btn-default">CREATE TEST</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </form>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th class="text-center">Number of Participants</th>
                <th>Test Type</th>
            </tr>
        </thead>
        @foreach (var test in Model.TestListData)
        {

            <tr>
                <td><a asp-page="/Tests/TestDetails" asp-route-testId="@test.testId">@test.testDate</a></td>
                <td class="text-center">@test.count</td>
                <td>@test.testType</td>
            </tr>
        }
    </table>

</body>
</html>